{% extends "layout.html.j2" %}
{% block main %}
  <h2>Les dernières pensées</h2>
  <div class="row">
    {% for thought in thoughts %}
      <div class="col-6 col-md-4 col-lg-3">
        <section class="card bg-light mb-3 text-center" style="height: 10em;">
          <div class="card-body d-flex justify-content-center align-items-center">
            <p class="card-title">{{ thought.content }}</p>
          </div>
        </section>
      </div>
    {% endfor %}
  </div>
{% endblock %}
